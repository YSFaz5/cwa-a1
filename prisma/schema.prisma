datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model GameSession {
  id        String   @id @default(cuid())
  type      String   // "escape" | "court"
  stage     Int
  seconds   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
